<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/producerTaskDate"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:textSize="16sp"
            android:textColor="@color/colorbackg2"
            android:background="@drawable/table"
            android:gravity="center" />

        <TextView
            android:id="@+id/producerBId"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:textSize="16sp"
            android:textColor="@color/colorbackg2"
            android:background="@drawable/table"
            android:gravity="center"
            />

        <TextView
        android:id="@+id/producerBName"
        android:textSize="16sp"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:textColor="@color/colorbackg2"
        android:background="@drawable/table"
        android:gravity="center"
        />

        <TextView
            android:id="@+id/producerMake_Order"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:textSize="16sp"
            android:textColor="@color/colorbackg2"
            android:background="@drawable/table"
            android:gravity="center"
            />

        <TextView
            android:id="@+id/producerMake_PosID"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:textSize="16sp"
            android:textColor="@color/colorbackg2"
            android:background="@drawable/table"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/producerPedID"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:textSize="16sp"
            android:textColor="@color/colorbackg2"
            android:background="@drawable/table"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/producerPOS"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:textSize="16sp"
            android:textColor="@color/colorbackg2"
            android:background="@drawable/table"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/producerPemit"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:textSize="16sp"
            android:textColor="@color/colorbackg2"
            android:background="@drawable/table"
            android:gravity="center"
            />

    </LinearLayout>

</LinearLayout>