<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/etProducerTaskDate"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:textSize="16sp"
            android:hint="(YYYY-MM-DD)"
            android:inputType="date"
            android:textColor="@color/colorbackg2"
            android:background="@drawable/table"
            android:gravity="center" />

        <TextView
            android:id="@+id/etProducerBId"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:textSize="16sp"
            android:textColor="@color/colorbackg2"
            android:background="@drawable/table"
            android:gravity="center"
            />

        <TextView
            android:id="@+id/etProducerBName"
            android:textSize="16sp"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:textColor="@color/colorbackg2"
            android:background="@drawable/table"
            android:gravity="center"
            />

        <EditText
            android:id="@+id/etProducerMake_Order"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:textSize="16sp"
            android:hint="制梁顺序"
            android:textColor="@color/colorbackg2"
            android:background="@drawable/table"
            android:gravity="center"
            />

        <TextView
            android:id="@+id/etProducerMake_PosID"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:textSize="16sp"
            android:hint="制梁台号"
            android:textColor="@color/colorbackg2"
            android:background="@drawable/table"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/etProducerPedID"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:textSize="16sp"
            android:hint="存梁台号"
            android:textColor="@color/colorbackg2"
            android:background="@drawable/table"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/etProducerPOS"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:textSize="16sp"
            android:hint="存梁位置"
            android:textColor="@color/colorbackg2"
            android:background="@drawable/table"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/etProducerPemit"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:textSize="16sp"
            android:text="未审核"
            android:textColor="@color/colorbackg2"
            android:background="@drawable/table"
            android:gravity="center"
            />

    </LinearLayout>

</LinearLayout>