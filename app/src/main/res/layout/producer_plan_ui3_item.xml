<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        >

        <TextView
            android:id="@+id/bridge_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="18sp"
            android:background="@drawable/table"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/MixProtect_Bottom"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:background="@drawable/table"
            android:gravity="center"

            android:textColor="#000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/MixProtect_Down"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:background="@drawable/table"
            android:gravity="center"
            android:textColor="#000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/MixProtect_Top"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:background="@drawable/table"
            android:gravity="center"
            android:textColor="#000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/Embedment_expansion_joint"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:background="@drawable/table"
            android:gravity="center"
            android:textColor="#000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/Embedment_lifting_hole"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:background="@drawable/table"
            android:gravity="center"

            android:textColor="#000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/Embedment_Fence"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:background="@drawable/table"
            android:gravity="center"
            android:textColor="#000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/Embedment_Air"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:background="@drawable/table"
            android:gravity="center"
            android:textColor="#000000"
            android:textSize="16sp" />

    </LinearLayout>

</LinearLayout>