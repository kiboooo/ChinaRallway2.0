<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <include layout="@layout/common_title2"
        android:id="@+id/repair_beam_toolbar"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_margin="10dp"
        >

        <LinearLayout
            android:layout_weight="4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <LinearLayout
                android:id="@+id/beam_search"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="桥名："
                    android:gravity="center"
                    android:textSize="16sp"
                    android:textColor="@color/colorbackg2"
                    />

                <Spinner
                    android:id="@+id/beam_search_spinner"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:spinnerMode="dropdown"
                    >

                </Spinner>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="梁编号："
                    android:gravity="center"
                    android:textSize="16sp"
                    android:textColor="@color/colorbackg2" />

                <Spinner
                    android:id="@+id/beam_search_spinner_LorR"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:spinnerMode="dropdown">
                </Spinner>

                    <Spinner
                        android:id="@+id/beam_search_spinner_ID"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:spinnerMode="dropdown">

                    </Spinner>
            </LinearLayout>

        </LinearLayout>


        <Button
        android:id="@+id/btn_beam_search"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="查询"
        android:background="@drawable/btn_search"
        />
    </LinearLayout>



    <LinearLayout
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/user_logout"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="48dp">

        <TextView

            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:gravity="center"
            android:text="梁板状态："
            android:textColor="#000000"
            android:textSize="24sp"
            />

        <TextView
            android:textColor="#000000"
            android:gravity="center"
            android:id="@+id/beam_buff"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="3"
            android:textSize="24sp" />

    </LinearLayout>

    <LinearLayout
        android:padding="8dp"
        android:layout_marginTop="24dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/beam_enter"
            android:background="@drawable/btn_search"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="梁板制作完成"
            android:textSize="24sp"
            android:layout_marginRight="16dp"
            />

        <Button
            android:id="@+id/beam_leave"
            android:background="@drawable/beam_leave"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="梁板已经出场"
            android:textSize="24sp"
            />



    </LinearLayout>



</LinearLayout>