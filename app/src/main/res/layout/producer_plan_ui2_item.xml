<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        >

        <TextView
            android:id="@+id/bridge_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/table"
            android:textSize="18sp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/WedgeBlockLeft_minL"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:background="@drawable/table"
            android:gravity="center"
            android:textColor="#000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/WedgeBlockLeft_minR"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:background="@drawable/table"
            android:gravity="center"
            android:textColor="#000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/WedgeBlockLeft_maxL"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:background="@drawable/table"
            android:gravity="center"
            android:textColor="#000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/WedgeBlockLeft_maxR"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:background="@drawable/table"
            android:gravity="center"
            android:textColor="#000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/WedgeBlockRight_minL"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:background="@drawable/table"
            android:gravity="center"

            android:textColor="#000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/WedgeBlockRight_minR"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:background="@drawable/table"
            android:gravity="center"

            android:textColor="#000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/WedgeBlockRight_maxL"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:background="@drawable/table"
            android:gravity="center"
            android:textColor="#000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/WedgeBlockRight_maxR"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:background="@drawable/table"
            android:gravity="center"
            android:textColor="#000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/ScupperLeft_minL"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:background="@drawable/table"
            android:gravity="center"
            android:textColor="#000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/ScupperLeft_maxL"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:background="@drawable/table"
            android:gravity="center"
            android:textColor="#000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/ScupperLeft_Between"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:background="@drawable/table"
            android:gravity="center"
            android:textColor="#000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/ScupperRight_minR"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:background="@drawable/table"
            android:gravity="center"
            android:textColor="#000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/ScupperRight_maxR"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:background="@drawable/table"
            android:gravity="center"
            android:textColor="#000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/ScupperRight_Between"
            android:layout_width="60dp"
            android:layout_height="match_parent"
