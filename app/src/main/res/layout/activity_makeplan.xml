<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <include layout="@layout/common_title2"/>

    <!--<HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">-->

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/user_logout"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/table"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:gravity="center"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:paddingLeft="3dp"
                                android:text="日期:"
                                android:textColor="#000000"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/et_date"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="3.8"
                                android:background="@drawable/table"
                                android:gravity="center"
                                android:text="2017-02-29至2017-03-06"
                                android:textColor="#000000"
                                android:textSize="14sp" />


                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:background="@drawable/table"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:gravity="center"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:paddingLeft="3dp"
                                android:text="里程方向:"
                                android:textColor="#000000"
                                android:textSize="14sp" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="3.8"
                                android:background="@drawable/table"
                                android:gravity="center"
                                android:text="小里程到大里程"
                                android:textColor="#000000"
                                android:textSize="14sp" />


                        </LinearLayout>


                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:orientation="horizontal">

                         <!--<TextView-->
                            <!--android:layout_width="0dp"-->
                            <!--android:layout_height="match_parent"-->
                            <!--android:layout_weight="1"-->
                            <!--android:background="@drawable/table"-->
                            <!--android:gravity="center"-->
                            <!--android:text="日期"-->
                            <!--android:textColor="#000000"-->
                            <!--android:textSize="12sp" />-->

                        <!--  <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/table"
                            android:gravity="center"
                            android:text="里程方向"
                            android:textColor="#000000"
                            android:textSize="12sp" />-->

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/table"
                            android:gravity="center"
                            android:text="架梁顺序"
                            android:textColor="#000000"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1.5"
                            android:background="@drawable/table"
                            android:gravity="center"
                            android:text="桥名"
                            android:textColor="#000000"
                            android:textSize="14sp" />

                      <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/table"
                            android:gravity="center"
                            android:text="左/右线(幅)"
                            android:textColor="#000000"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1.3"
                            android:background="@drawable/table"
                            android:gravity="center"
                            android:text="梁编号"
                            android:textColor="#000000"
                            android:textSize="14sp" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:orientation="horizontal">

                        <!--        <TextView
                            android:id="@+id/et_date"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/table"
                            android:gravity="center"
                            android:text="2017-02-29至2017-03-06"
                            android:textColor="#000000"
                            android:textSize="12sp" />-->

                        <!--   <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/table"
                            android:gravity="center"
                            android:text="小里程到大里程"
                            android:textColor="#000000"
                            android:textSize="12sp" />-->

                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/recyclerview_plandata"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="5"
                            android:background="@drawable/table">

                        </android.support.v7.widget.RecyclerView>


                    </LinearLayout>


                </LinearLayout>

                <Button
                    android:id="@+id/btn_add_beam"
                    android:layout_marginRight="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="添加行"
                    android:textColor="#000000"
                    android:background="@drawable/beam_leave"
                    android:textSize="24sp"
                    />

                <Button
                    android:id="@+id/btn_upload"
                    android:layout_marginRight="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="提交架梁计划表"
                    android:textColor="#000000"
                    android:background="@drawable/btn_search"
                    android:textSize="24sp"
                    android:layout_marginBottom="10dp"
                    />

            </LinearLayout>





        </ScrollView>



  <!--  </HorizontalScrollView>-->








</LinearLayout>